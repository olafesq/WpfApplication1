<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="button" Content="Connect" HorizontalAlignment="Left" Margin="45,95,0,0" VerticalAlignment="Top" Width="85" Click="button_Click"/>
        <RichTextBox x:Name="richTextBox" HorizontalAlignment="Left" Height="210" Margin="140,40,0,0" VerticalAlignment="Top" Width="355" KeyDown="Data2Send" AcceptsReturn="False" FontFamily="Consolas" BorderThickness="0" >
            <FlowDocument IsColumnWidthFlexible="False">
                <Paragraph>
                    <Run Text="Formula Student Estonia Firmware tool"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="45,60,0,0" VerticalAlignment="Top" Width="85" />
        <Button x:Name="bProgram" Content="Program FW" HorizontalAlignment="Left" Margin="45,130,0,0" VerticalAlignment="Top" Width="85" Click="bProgram_Click"/>

    </Grid>
</Window>
